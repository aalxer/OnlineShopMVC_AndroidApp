<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/shoppingcart_rowMainLayout"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/shoppingcart_rowCardViewLayout"
        android:layout_width="match_parent"
        android:layout_height="126dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/shoppingcart_rowContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/titleView_shoppingCart"
                android:layout_width="239dp"
                android:layout_height="37dp"
                android:layout_marginStart="4dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp"
                android:text="TextView"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/productCodeView_shoppingCart"
                android:layout_width="224dp"
                android:layout_height="27dp"
                android:layout_marginStart="4dp"
                android:fontFamily="sans-serif"
                android:text="TextView"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleView_shoppingCart" />

            <TextView
                android:id="@+id/priesTextView_shoppingCart"
                android:layout_width="72dp"
                android:layout_height="19dp"
                android:text="pries"
                android:textSize="6pt"
                android:fontFamily="sans-serif"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.297"
                app:layout_constraintStart_toEndOf="@+id/productCodeView_shoppingCart"
                app:layout_constraintTop_toBottomOf="@+id/priesView_shoppingCart"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/priesView_shoppingCart"
                android:layout_width="109dp"
                android:layout_height="38dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:fontFamily="sans-serif"
                android:text="TextView"
                android:textSize="11pt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/titleView_shoppingCart"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>